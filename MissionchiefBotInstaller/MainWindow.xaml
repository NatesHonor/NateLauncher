<Window x:Class="MissionChiefBotInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MissionChiefBot Installer" Height="350" Width="525">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Welcome to the MissionChiefBot Installer!" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <TextBlock Text="Server:"/>
            <TextBox x:Name="ServerTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Email:"/>
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Password:"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>
            <Button Content="Install" Click="InstallButton_Click" Margin="0,0,0,10"/>
            <Button Content="Update" Click="UpdateButton_Click" Margin="0,0,0,10"/>
            <Button Content="Install Dashboard" Click="DashboardButton_Click" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>
