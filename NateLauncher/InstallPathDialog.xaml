<Window x:Class="NateLauncher.InstallPathDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Install Path" Height="150" Width="400">
    <Grid>
        <TextBox x:Name="PathTextBox" Text="C:\Program Files (x86)\Nate Launcher" Width="250" Height="18" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
        <Button Content="Browse" Click="BrowseButton_Click" Width="75" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <Button Content="OK" Click="OKButton_Click" Width="75" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10"/>
    </Grid>
</Window>
